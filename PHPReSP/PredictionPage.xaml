<Window x:Class="PHPReSP.PredictionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PHPReSP"
        mc:Ignorable="d"
        Title="PredictionPage" Height="314" Width="393">
    <Grid>
        <DataGrid Name="dtg" HorizontalAlignment="Left" Height="237" Margin="10,41,0,0" VerticalAlignment="Top" Width="359"/>
        <ComboBox Name="Period" HorizontalAlignment="Left" Margin="88,12,0,0" VerticalAlignment="Top" Width="92" Height="22" DropDownClosed="Predict_Sales">
            <ComboBoxItem IsSelected="True">Month</ComboBoxItem>
            <ComboBoxItem>Week</ComboBoxItem>
        </ComboBox>

        <ComboBox Name="Type" HorizontalAlignment="Left" Margin="263,12,0,0" VerticalAlignment="Top" Width="91" Height="22" DropDownClosed="Predict_Sales">
            <ComboBoxItem IsSelected="True">Category</ComboBoxItem>
            <ComboBoxItem>Product</ComboBoxItem>
        </ComboBox>
        <Label Content="Time Period" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Data Type" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top" Height="26"/>
    </Grid>
</Window>
